@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer does not have any machines.</p>
}
else
{
  <h4>Machines that see this engineer:</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Machine.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Machine", "Create", "Machines", new {}, new { @class = "btn btn-outline-primary" })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new {id = Model.EngineerId }, new { @class = "btn btn-outline-primary" })</p>
<p>@Html.ActionLink("Back to Engineer list", "Index", new {}, new { @class = "btn btn-outline-primary" })</p>
